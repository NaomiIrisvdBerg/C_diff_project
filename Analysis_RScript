for (i in 1:(length(conditions) - 1)) {
  for (j in (i+1):length(conditions)) {
    comparisons_list[[paste(conditions[i], conditions[j], sep = " vs. ")]] <- c(conditions[i], conditions[j])
  }
}

comparisons_list

