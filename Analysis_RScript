         vertex.label=V(cor_network_mix14)$name,
         vertex.label.cex=1,  
         vertex.size=15, 
         vertex.label.color = "black",
         vertex.label.family = "Arial",
         edge.arrow.size=0.5,
         layout=layout_with_kk)
    
  
    
    
