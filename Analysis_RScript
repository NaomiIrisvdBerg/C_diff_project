ASV_Monaghan_t$Ratio[is.nan(ASV_Monaghan_t$Ratio)] <- 0
ASV_Monaghan_t$Ratio[is.infinite(ASV_Monaghan_t$Ratio)] <- NA

ASV_Monaghan_t$Ratio2[is.nan(ASV_Monaghan_t$Ratio2)] <- 0
