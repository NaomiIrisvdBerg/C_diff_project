  Condition = c('Fecal_AB_CD_Bcaccae',      'Fecal_AB',       'Fecal_AB_CD',     'Fecal_AB_CD_Mix14',      'Fecal_control'),
  Treatment = c('Fecal_AB_CD_B.caccae_D20', 'Fecal_AB',       'Fecal_AB_CD_D20', 'Fecal_AB_CD_Mix_14_D20', 'Fecal_control')
)


